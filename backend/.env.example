# ================================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================================
PORT=3001
NODE_ENV=development

# ================================================
# BASE DE DATOS MySQL
# ================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=gestion_pedidos_dev

# ================================================
# SEGURIDAD - JWT
# ================================================
# IMPORTANTE: Generar un secret seguro con el comando:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERAR_UN_SECRET_SEGURO_AQUI_NO_USAR_ESTE
JWT_EXPIRES_IN=24h

# ================================================
# SEGURIDAD - ENCRIPTACIÓN DE CONFIGURACIÓN
# ================================================
# Clave para encriptar credenciales sensibles en la BD
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CONFIG_ENCRYPTION_KEY=generar_clave_encriptacion_segura

# ================================================
# CONFIGURACIÓN DE EMPRESA
# ================================================
COMPANY_NAME=Mi Empresa
COMPANY_LOGO_URL=
COMPANY_PRIMARY_COLOR=#3B82F6
COMPANY_SECONDARY_COLOR=#1E40AF

# ================================================
# CONFIGURACIÓN DE ARCHIVOS
# ================================================
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880

# ================================================
# RATE LIMITING
# ================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# ================================================
# CORS
# ================================================
FRONTEND_URL=http://localhost:3000

# ================================================
# INTEGRACIÓN SIIGO (SISTEMA CONTABLE)
# ================================================
# IMPORTANTE: Solicitar credenciales a SIIGO
SIIGO_ENABLED=true
SIIGO_API_USERNAME=tu_usuario@empresa.com
SIIGO_API_ACCESS_KEY=solicitar_access_key_a_siigo
SIIGO_API_BASE_URL=https://api.siigo.com
SIIGO_API_PARTNER_ID=tu_partner_id_oficial
SIIGO_WEBHOOK_SECRET=generar_webhook_secret_seguro

# ================================================
# INTEGRACIÓN WHATSAPP (WAPIFY)
# ================================================
# IMPORTANTE: Solicitar token a Wapify
WHATSAPP_ENABLED=true
WAPIFY_API_TOKEN=solicitar_token_a_wapify
WAPIFY_API_BASE_URL=https://ap.whapify.ai/api
WHATSAPP_BUSINESS_NUMBER=573000000000
WHATSAPP_RETRY_ATTEMPTS=3
WHATSAPP_RETRY_DELAY_MINUTES=5

# ================================================
# NOTAS DE CONFIGURACIÓN
# ================================================
# 1. Copiar este archivo como .env y completar con valores reales
# 2. NUNCA subir el archivo .env a Git
# 3. Generar JWT_SECRET seguro con el comando indicado
# 4. Solicitar credenciales de SIIGO al proveedor
# 5. Solicitar token de Wapify al proveedor
# 6. Cambiar contraseñas por defecto en producción
